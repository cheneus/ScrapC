<h1 class="jumbotron text-center" id="productTitle" data-title="{{comments.title}}">{{comments.title}}</h1>
<div id="productEntry" class="row my-2">
  <div class="col-12">
    <div class="card" id="product_list">
      <div class="card m-2" id={{this.title}}>
        <img class="card-img-top" src={{comments.img}} alt={{this.title}}>
      </div>
      <!-- Button trigger modal -->
      <button type="button " class="btn btn-primary m-2" data-toggle="modal" data-target="#exampleModal">
        Add a Comment
      </button>
 <h3 class="my-1 card-header">User Comments</h3>
      <ul class="list-group list-group-flush">

        {{#each comments.comment}} {{#unless comments.comment}}
        <li class="list-group-item p-0">
          <div class="card border-light " id={{this.title}}>
            <div class="card-title px-2 pt-2 font-weight-bold">{{this.title}}
            </div>
            <div class="card-block p-2">
              <blockquote>
                <p>{{this.body}}</p>
                <p>Rating: {{this.rating}}</p>
                <footer class="blockquote-footer">{{this.author}}</footer>
                </p>
              </blockquote>
            </div>
          </div>
        </li>
        {{/unless}} {{/each}}
      </ul>
    </div>
  </div>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add a Comment</h5>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="author">Name</label>
            <input class="form-control" id="author" placeholder="NAME">
          </div>
          <div class="form-group">
            <label for="author">Title</label>
            <input class="form-control" id="title" placeholder="THE TITLE!">
          </div>
          <div class="form-group">
            <label for="rating">Rating</label>
            <select class="form-control" id="rating">
              <option>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
            </select>
          </div>
          <div class="form-group">
            <label for="body">Your Comments</label>
            <textarea class="form-control" id="body" rows="3"></textarea>
          </div>
          <button type="submit" id="saveComment">Submit</button>
        </form>
      </div>
    </div>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
</div>

